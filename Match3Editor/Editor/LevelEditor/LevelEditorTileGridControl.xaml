<UserControl x:Class="Match3.Editor.LevelEditor.LevelEditorTileGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Match3.Editor.LevelEditor"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
    <materialDesign:Card Height="740" Width="740" Background="{DynamicResource GrayBrush8}"
                  Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}">
        <Canvas Width="740" Height="740">
            <Canvas Canvas.Top="20" Canvas.Left="30" Name="Items"></Canvas>
            <Canvas Canvas.Top="20" Canvas.Left="30" Name="Directions"></Canvas>
            <Canvas Canvas.Top="20" Canvas.Left="30" Name="Modifiers"></Canvas>
            <Canvas Canvas.Top="20" Canvas.Left="30" Name="Tiles"></Canvas>
	        <Canvas Canvas.Top="20" Canvas.Left="30" Name="TileClick"></Canvas>
            <Canvas Canvas.Top="20" Canvas.Left="30" Name="Edges"></Canvas>
        </Canvas>
    </materialDesign:Card>
</UserControl>
