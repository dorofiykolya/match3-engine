<CheckBox x:Class="Match3.Editor.LevelEditor.LevelEditorAvailableItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Match3.Editor.LevelEditor"
             IsChecked="True"
             Margin="16 4 16 0" Width="100" Style="{StaticResource MaterialDesignUserForegroundCheckBox}">
    <Grid Margin="5 -4 5 0" Width="50" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Ellipse Name="BackgroundColor" HorizontalAlignment="Center" VerticalAlignment="Center" Width="20" Height="20" Stroke="Black" StrokeThickness="2"></Ellipse>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" FontWeight="Bold" Name="Label">1</Label>
    </Grid>
</CheckBox>
