<UserControl x:Class="Match3.Editor.Player.RequirementPlayerItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Match3.Editor.Player"
             mc:Ignorable="d" 
             BorderThickness="3"
             BorderBrush="Black"
             Height="100" Width="100">
    <UserControl BorderThickness="5"
             BorderBrush="{Binding ColorBrush}">
        <UserControl BorderThickness="3" BorderBrush="Black">
            <StackPanel>
                <Label Name="RequirementName" Background="{Binding ColorBrush}" HorizontalContentAlignment="Center">1:1</Label>
                <Label Name="Requirement" Background="PowderBlue" HorizontalContentAlignment="Center">10</Label>
                <Label Name="Current" Background="CadetBlue" HorizontalContentAlignment="Center">1</Label>
            </StackPanel>
        </UserControl>
    </UserControl>
</UserControl>
